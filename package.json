{
  "name": "proto-stencil-tailwind",
  "version": "0.0.39",
  "description": "A TailwindCSS 2.x Plugin for Stencil... [ Prototype ]",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "stencil",
    "tailwind"
  ],
  "scripts": {
    "build": "rollup -c && cp ./src/app.css ./dist/",
    "test": "ava",
    "debug": "export DEBUG=* DEBUG_COLORS=true FORCE_COLOR=1 && npm run build && ava",
    "predeploy": "yarn build",
    "deploy": "echo -- run [ np patch ]"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "postcss": "8.3.5",
    "rollup": "2.53.2",
    "tailwindcss": "2.2.4",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "acorn-walk": "8.1.1",
    "chalk": "4.1.1",
    "debug": "4.3.2",
    "magic-string": "0.25.7",
    "postcss": "8.3.5",
    "tailwindcss": "2.2.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.2.3",
    "@types/acorn": "4.0.6",
    "@types/debug": "4.1.6",
    "@types/node": "16.3.3",
    "autoprefixer": "10.3.1",
    "ava": "3.15.0",
    "rollup": "2.53.2",
    "ts-node": "10.1.0",
    "tslib": "2.3.0",
    "typescript": "4.3.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eswat2/proto-stencil-tailwind.git"
  },
  "module": "dist/index.es.js",
  "types": "types/index.d.ts"
}
