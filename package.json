{
  "name": "proto-stencil-tailwind",
  "version": "0.0.14",
  "description": "A TailwindCSS 2.x Plugin for Stencil... [ Prototype ]",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "stencil",
    "tailwind"
  ],
  "scripts": {
    "build": "rollup -c && cp ./src/app.css ./dist/",
    "test": "ava",
    "debug": "export DEBUG=* DEBUG_COLORS=true FORCE_COLOR=1 && npm run build && ava",
    "predeploy": "yarn build",
    "deploy": "yarn publish --patch"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "postcss": "8.3.4",
    "rollup": "2.51.2",
    "tailwindcss": "2.1.4",
    "typescript": "4.3.2"
  },
  "dependencies": {
    "acorn-walk": "8.1.0",
    "chalk": "4.1.1",
    "debug": "4.3.1",
    "magic-string": "0.25.7",
    "postcss": "8.3.4",
    "tailwindcss": "2.1.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.2.1",
    "@types/acorn": "4.0.5",
    "@types/debug": "4.1.5",
    "@types/node": "^15.12.2",
    "autoprefixer": "10.2.6",
    "ava": "3.15.0",
    "rollup": "2.51.2",
    "ts-node": "10.0.0",
    "tslib": "2.3.0",
    "typescript": "4.3.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eswat2/stencil-tailwind.git"
  },
  "module": "dist/index.es.js",
  "types": "types/index.d.ts"
}
